<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/video_previewer_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ToggleButton
        android:id="@+id/btn_switch_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_switch_button"
        android:text=" "
        android:textOff=" "
        android:textOn=" "
        android:layout_below="@+id/btn_record"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/btn_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_capture_button"
        android:text="拍照"/>


    <ToggleButton
        android:id="@+id/btn_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_record_button"
        android:text="开始"
        android:textOff="开始"
        android:textOn="停止"
        android:visibility="gone" />


    <TextView
        android:id="@+id/timer"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/video_previewer_surface"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:textColor="#ffffff"/>

    <ToggleButton
        android:id="@+id/btn_PWM1"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btn_switch_mode"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/btn_record"
        android:text="PWM1"
        android:textOff="PWM1"
        android:textOn="PWM1"/>

    <ToggleButton
        android:id="@+id/btn_PWM2"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btn_PWM1"
        android:layout_alignEnd="@+id/btn_PWM1"
        android:layout_alignStart="@+id/btn_PWM1"
        android:layout_marginTop="40dp"
        android:text="PWM2"
        android:textOff="PWM2"
        android:textOn="PWM2"
        />

    <ToggleButton
        android:id="@+id/btn_PWM3"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/btn_PWM2"
        android:layout_alignStart="@+id/btn_PWM2"
        android:layout_above="@+id/btn_PWM4"
        android:layout_marginBottom="40dp"
        android:text="PWM3"
        android:textOff="PWM3"
        android:textOn="PWM3"
        />

    <ToggleButton
        android:id="@+id/btn_PWM4"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/btn_PWM1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_PWM3"
        android:layout_marginBottom="97dp"
        android:text="PWM4"
        android:textOff="PWM4"
        android:textOn="PWM4"
        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/btn_PWM1"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/btn_PWM1"
        android:text="电子变倍开/关"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btn_switch_mode"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/btn_3"
        android:text="停止"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_5"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/btn_4"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/btn_4"
        android:text="自动对焦"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_6"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/btn_PWM2"
        android:layout_toEndOf="@+id/btn_PWM2"
        android:text="调色板"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/btn_PWM2"
        android:layout_toEndOf="@+id/btn_6"
        android:text="停止"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_8"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/btn_PWM3"
        android:layout_toEndOf="@+id/btn_PWM3"
        android:text="拍照"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_9"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/btn_PWM3"
        android:layout_toEndOf="@+id/btn_8"
        android:text="停止"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_10"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/btn_9"
        android:layout_toEndOf="@+id/btn_9"
        android:text="录像开始/停止"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_11"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/btn_PWM4"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/btn_PWM4"
        android:text="镜头远焦微调"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_12"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/btn_11"
        android:layout_toEndOf="@+id/btn_11"
        android:text="停止"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_13"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/btn_12"
        android:layout_toEndOf="@+id/btn_12"
        android:text="镜头近焦微调"
        android:visibility="gone"/>

    <Button
        android:id="@+id/slavebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_PWM3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="从机模式" />

    <Button
        android:id="@+id/gimbal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/slavebutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="115dp"
        android:text="请求云台控制" />

    <Button
        android:id="@+id/displaymode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gimbal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:text="设置输出模式" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btn_record"
        android:layout_toEndOf="@+id/btn_record"
        android:background="@drawable/back_button_normal" />

</RelativeLayout>
